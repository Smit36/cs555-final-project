<main class='screen'>
	<header>
		<h1>Welcome to Wellness; Let's boost your mental health!</h1>
	</header>
	<div class='container'>
		<form action='/login' method='post' name='login' id='login-form'>
			<label for='username'>Username:</label>
			<input type='text' name='username' id='username' />
			<br />
			<label for='password'>Password:</label>
			<input type='password' name='password' id='password' />
			<br />
			<button type='submit'>Enter</button>
		</form>
	</div>
	<p class='error' id='error'>{{errormsg}}</p>
	<br />
	<button onclick="location.href='/'" type='button'>Back</button>
	<button onclick="location.href='/signup'" type="button">Sign up</button>
	<script src='/public/js/login.js'></script>
</main>