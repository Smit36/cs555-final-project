<a href="/logout"><button>Log Out</button></a>
<button onclick="location.href='/'" type='button'>Back</button>
<div class="show">
  <div class="cardTask">
    <div class="containerTask">
      <h1>{{task.name}}</h1>
      <p><strong>How to do: </strong>{{task.description}}</p>
      <p><strong>Points: </strong>{{task.points}}</p>
      <p><strong>Level: </strong>{{task.level}}</p>
      <form action="/task/completeTask/{{task._id}}" method="post" id="completeTask" onSubmit="return completeTask()">
        <button type="submit" id="complete">Complete</button>
      </form>
    </div>
  </div>
</div>